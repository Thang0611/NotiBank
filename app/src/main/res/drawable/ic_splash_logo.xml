<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Nền tròn -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#00695C" />
            <size android:width="100dp" android:height="100dp" />
        </shape>
    </item>

    <!-- Chuông (notification bell) -->
    <item
        android:drawable="@drawable/ic_notification_active"
        android:width="40dp"
        android:height="40dp"
        android:gravity="center"
        android:tint="#FFFFFF" />

    <!-- Sóng Wi-Fi (3 vòng cung) -->
    <item>
        <shape android:shape="oval">
            <stroke android:width="4dp" android:color="#80CBC4" />
            <size android:width="60dp" android:height="60dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <stroke android:width="4dp" android:color="#80CBC4" />
            <size android:width="40dp" android:height="40dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <stroke android:width="4dp" android:color="#80CBC4" />
            <size android:width="20dp" android:height="20dp" />
        </shape>
    </item>

    <!-- Micro (giọng nói) -->
    <item
        android:drawable="@android:drawable/ic_btn_speak_now"
        android:width="24dp"
        android:height="24dp"
        android:gravity="bottom|center_horizontal"
        android:bottom="10dp"
        android:tint="#FFFFFF" />
</layer-list>